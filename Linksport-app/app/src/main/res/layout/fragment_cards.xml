<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CardsFragment">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/floatingBtnAddCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right|center_vertical"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="75dp"
        android:contentDescription="Adicionar card"
        android:text="Criar card"
        android:textColor="@color/white"
        app:backgroundTint="@color/green1"
        app:elevation="6dp"
        app:icon="@drawable/ic_baseline_add_24"
        app:iconTint="@color/white"
        app:tint="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCards"
            android:layout_width="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="80dp"
            android:layout_height="match_parent" />

    </LinearLayout>


</FrameLayout>